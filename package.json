{
  "name": "jwt-token",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "test": "jest --runInBand",
    "test:cov": "jest --coverage",
    "smoke": "node -e \"require('./app'); console.log('App OK')\""
  },

 "jest": {
  "testEnvironment": "node",
  "coverageDirectory": "coverage",
  "collectCoverageFrom": [
    "app.js",
    "controllers/**/*.js",
    "routes/**/*.js",
    "models/**/*.js",
    "middlewares/**/*.js",
    "!server.js"
  ],
  "setupFiles": [
    "<rootDir>/jest.setup.js"
  ],
  "coverageReporters": ["text", "json-summary", "lcov"] 
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "supertest": "^7.1.4"
  }
}
